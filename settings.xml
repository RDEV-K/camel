<?xml version="1.0"?>

<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                              http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <localRepository>/home/data/m2/repository</localRepository>


    <profiles>
        <profile>
            <id>staging-repos</id>
            <repositories>
                <repository>
                    <id>central</id>
                    <name>Maven Central Repo</name>
                    <url>https://repo.maven.apache.org/maven2</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                </repository>
                <repository>
                    <id>apache.staging.camel</id>
                    <url>https://repository.apache.org/content/repositories/orgapachecamel-1302</url>
                    <name>Apache Camel 3.8.0 Staging Repo</name>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <name>Maven Central Repo</name>
                    <url>https://repo.maven.apache.org/maven2</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                </pluginRepository>
                <pluginRepository>
                    <id>apache.staging.camel</id>
                    <url>https://repository.apache.org/content/repositories/orgapachecamel-1302</url>
                    <name>Apache Camel 3.8.0 Staging Repo</name>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>staging-repos</activeProfile>
    </activeProfiles>
</settings>
